<!DOCTYPE html>
<html>
  <head>
    <title>UrSmartBuy</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <main class="container">
      <header>
        <nav class="navbar-light bg-faded">
              <ul class="nav navbar-nav">
                <li class="nav-item"><%= link_to "Home", root_path %></li>
                <% if logged_in? %>
                  <li class="nav-item">Hello, <%= current_user.username %></li>
                  <li class="nav-item"><%= link_to 'Logout', logout_path, method: :delete, data: {confirm: 'Are you sure?'} %></li>
                  <li class="nav-item"><%= link_to "Wishlist", wishlists_path %></li>
                <% else %>
                  <li><%= link_to "Register", register_path %></li>
                  <li><%= link_to "Login", login_path %></li>
                <% end %>
              </ul>
        </nav>
      </header>

      <% flash.each do |name, message| %>
        <!-- <div class="flash-message flash-message-<%= name %>">
          <%= message %>
        </div> -->
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
