<div class="row">
<% @products.each do |product| %>
<div class="col-md-4 col-xs-6">
<div class="card">
  <%= image_tag product.image, class:"card-img-top" %>
  <div class="card-block">
    <h4 class="card-title"><%= product.name %></h4>
    <p class="card-text"><%= product.description %></p>
    <ul>
      <li><%= product.if_free %></li>
      <li>Original price: £<%= product.original_price %></li>
      <li>Current price: £<%= product.price %></li>
      <li>Savings: £<%= product.savings %></li>
      <li>Percent discount: <%= product.percent_discount %>%</li>
      <li>Category: <%= product.category %></li>
    </ul>
    <!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
    <% if logged_in? %>
      <%= link_to 'Edit', edit_product_path(product), class:"btn btn-primary" %>
      <%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-primary" %>
    <% end %>
  </div>
</div>
</div>
<% end %>

</div>

